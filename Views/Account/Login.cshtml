@model LoginDto

@{
    <div class="col-md-4 mx-auto rounded border p-4">
    <h2 class="text-center mb-3">
    Please Login
    </h2>
    <hr />

    @if(ViewBag.ErrorMessage !=null){
            <div class="alert alert-danger  alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }
    <form method="post">
    <div class="mb-3">
    <label class="form-label">Email</label>
    <input  asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>



    </div>  <div class="mb-3">


                <label class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>



    </div>  <div class=" form-check mb-3">
                <input class="form-check-label" type="checkbox" asp-for="Remeberme" class="form-control" />

                <label class="form-check-label">Remeber Me</label>



    </div>
            <div class="row mb-3">


                <div class="col d-grid">
                <button type="submit" class="btn btn-primary">Log in</button>

                </div>
                <div class="col d-grid">
                <a  asp-controller="Home" asp-action="Index" role="button"  class="btn btn-outline-primary">
                
                Cancel
                </a>
                
                
                </div>
            
            </div> 
            <div>
                <a asp-controller="Account" asp-action="ForgetPassword" role="button" class="btn btn-link">
                    Forgot your Password?
                </a>
            
            </div>

    </form>
    </div>
}
