@model PasswordDto
@{
<div class="mx-auto rounded border p-4" style="width:500px">
    <h2 class="text-center mb-3">
    Edit password
    </h2>
    <hr />
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger  alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success  alert-dismissible fade show" role="alert">
                <strong>@ViewBag.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }





    <form method="post">

			<div class="row mb-2">

				<div class="col-sm-4 col-form-label">Current Password</div>
                <div class="col-sm-8">
                    <input class="form-control" type="password" asp-for="CurrentPassword">
                    <span class="text-danger" asp-validation-for="CurrentPassword">
                    </span>
                </div>
				

			</div>
            <div class="row mb-2">

                <div class="col-sm-4 col-form-label">New Password</div>
                <div class="col-sm-8">
                    <input class="form-control" type="password" asp-for="NewPassword">
                    <span class="text-danger" asp-validation-for="NewPassword">
                    </span>
                </div>


            </div>
            <div class="row mb-2">

                <div class="col-sm-4 col-form-label">Confirm Password</div>
                <div class="col-sm-8">
                    <input class="form-control" type="password" asp-for="ConfirmPassword">
                    <span class="text-danger" asp-validation-for="ConfirmPassword">
                    </span>
                </div>


            </div>
            <div class="row">
                <div class="offset-sm-4 col d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>

            </div>
            <div class="col d-grid">
            
            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Profile">Cancel</a>
            </div>
            </div>
    
    </form>
</div>
}
